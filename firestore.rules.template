rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Match ALL documents in the database recursively
    match /{document=**} {

      // Allow read/write ONLY if the user is authenticated
      // AND their UID matches your specific Admin UID.
      // Everyone else (unauthenticated or other users) is denied.
      allow read, write: if request.auth != null && request.auth.uid == "YOUR_ADMIN_UID_HERE";
    }
  }
}