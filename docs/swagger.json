            "properties": {
                "city": {
                    "type": "string"
                },
                "end_time": {
                    "type": "string",
                    "example": "2024-07-20T22:00:00Z"
                },
                "event_name": {
                    "type": "string"
                },
                "price": {
                    "type": "number",
                    "minimum": 0
                },
                "start_time": {
                    "type": "string",
                    "example": "2024-07-20T22:00:00Z"
                },
                "type": {
